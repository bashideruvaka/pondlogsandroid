<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView1"
            style="@android:style/TextAppearance.DeviceDefault.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="eruvaka"
            android:src="@drawable/lg" />

        <TextView
            style="@style/ButtonText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:text="PondLogs"
            android:textColor="@android:color/white"
            android:textSize="40sp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/loginusername1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:hint="EmailId/Mobilenumber"
                android:imeOptions="flagNoExtractUi"
                android:inputType="text"
                android:textColor="@android:color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="15sp"
                android:typeface="normal">

            </EditText>
        </LinearLayout>

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"

            android:orientation="horizontal">

            <EditText
                android:id="@+id/loginpasswd1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:fontFamily="sans-serif"
                android:hint="Password"
                android:imeOptions="flagNoExtractUi"
                android:inputType="textPassword"
                android:textColor="@android:color/white"
                android:textColorHint="#FFFFFF"
                android:textSize="15sp"
                android:textStyle="normal">

            </EditText>
        </LinearLayout>


        <Button
            android:id="@+id/login_loginbutton1"
            android:layout_width="250dp"
            android:layout_height="39dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/rounded_button"
            android:onClick="LoginFunction"
            android:text="Log In"
            android:textColor="@android:color/white"
            android:textSize="15sp" />
    </LinearLayout>


</RelativeLayout> 

 
 