<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:background="@drawable/roundededitcorner">
     

    <EditText
        android:id="@+id/updatepondname"
        android:layout_width="0dp"
        android:layout_height="36dp"
       
        android:textSize="18sp"
        android:inputType="text"
        android:gravity="center"
        android:background="@drawable/roundededitcorner"
        android:layout_weight="1"/>
        <ImageButton 
         
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="5dp"
          android:contentDescription="true"
          android:background="@drawable/location"/>
    
</LinearLayout>
<TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pond Size"
        android:layout_margin="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="left" />

 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
    
<EditText
        android:id="@+id/updatepondsize"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:background="@drawable/roundededitcorner"/>
    <LinearLayout 
    android:layout_width="0dp"
    android:layout_height="30dp"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:background="@drawable/roundededitcorner">
    <Spinner
         android:id="@+id/updatepondacresspineer"
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_weight="1"
         />
    </LinearLayout>
</LinearLayout>
 <TextView
        
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PLs Stocked"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="left"/>
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
     
    <EditText
        android:id="@+id/updateplsstocked"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:inputType="numberDecimal"
        android:gravity="center"
        android:background="@drawable/roundededitcorner"/>
    <LinearLayout 
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_weight="1"
         android:layout_margin="5dp"
         android:background="@drawable/roundededitcorner">
    <Spinner
         android:id="@+id/updatestockspinner"
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_weight="1"/>
    
 </LinearLayout>
 
</LinearLayout>  

 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
     <TextView
        
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Stocking Date"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="left" />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Pond Status"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="left"  />

    
</LinearLayout>  
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
    
      <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
<TextView
         android:id="@+id/updatecalendar"
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/updateimgcalendar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/calendar"/>

</LinearLayout>
<LinearLayout 
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_weight="1"
         android:layout_margin="5dp"
         android:background="@drawable/roundededitcorner">
   <Spinner
         android:id="@+id/spinneractive1"
         android:layout_width="0dp"
         android:layout_height="30dp"
         android:layout_weight="1" />
    </LinearLayout>
</LinearLayout> 
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
  <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Feed Schedules"
        android:layout_marginLeft="5dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:gravity="left"  />
 
  </LinearLayout>
 <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
  <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_margin="3dp">
<TableLayout
            android:id="@+id/updatedemo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:shrinkColumns="*"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:stretchColumns="*"
            android:textColor="@android:color/white">
        </TableLayout>
        
 </LinearLayout>       
</ScrollView>
  
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
    
   <Button 
        android:id="@+id/btnupdate1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_button"
        android:textColor="@android:color/white"
        android:text="Update"/>
   </LinearLayout>
</LinearLayout>
</ScrollView>
