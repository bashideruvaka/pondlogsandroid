<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
     

     <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
<TextView
         android:id="@+id/harvestponddate"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/hd1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/calendar"/>

</LinearLayout>
  <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
  <TextView
         android:id="@+id/harvestpondtime"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/ht1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/clock"/>

</LinearLayout>
 
</LinearLayout>
 <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="3dp"
    android:orientation="horizontal">
 <TextView
          
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="PondName"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>
<LinearLayout  
    android:layout_width="0dp"
    android:layout_height="36dp"
    android:layout_weight="1"
    android:layout_margin="5dp"
    android:background="@drawable/roundededitcorner">
      <Spinner
        android:id="@+id/harvestpondspineer"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"/>
</LinearLayout>  
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
  <TextView
          
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="HarvestSize(g)"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>
    
    <EditText
        android:id="@+id/harvestpondsize"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
         />
       
    
     
 </LinearLayout>
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
    <TextView
          
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="ShrimpHarvest(Kg)"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>
    
    <EditText
        android:id="@+id/shrimpharvestpond"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
         />
    </LinearLayout>
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
    <TextView
          
         android:layout_width="wrap_content"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="This is The Final Harvest"
         android:textColor="@android:color/black"
          />

    <CheckBox
        android:id="@+id/checkBox1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />
     
    </LinearLayout>
    
    <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
 <Button 
          android:layout_width="0dp"
          android:layout_height="36dp"
          android:layout_weight="1"
          android:text="Cancel"
          android:id="@+id/harvestpondCancel"
          android:layout_margin="3dp"
          android:layout_gravity="center"
          android:textColor="@android:color/white"
          android:background="@drawable/blue_button"/>
 <Button 
          android:layout_width="0dp"
          android:layout_height="36dp"
          android:layout_weight="1"
          android:text="Save"
          android:id="@+id/harvestpondSave"
          android:layout_margin="3dp"
          android:layout_gravity="center"
          android:textColor="@android:color/white"
          android:background="@drawable/blue_button"/>
 </LinearLayout>
</LinearLayout>
