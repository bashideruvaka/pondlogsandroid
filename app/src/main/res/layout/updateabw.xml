<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
      <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    

   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginRight="7dp"
    android:layout_marginLeft="7dp"
    android:orientation="horizontal">
     

     <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
<TextView
         android:id="@+id/abwupdatecalendar1"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/abwupdateimgcalendar1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/calendar"/>

</LinearLayout>
  <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
  <TextView
         android:id="@+id/abwupdatetime1"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/abwupdateimgtime1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/clock"/>

</LinearLayout>
   
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="3dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:background="@drawable/roundededitcorner">
  
 
     
     <Spinner
        android:id="@+id/abwupdatespinner1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>

    
    </LinearLayout>

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:orientation="horizontal"
    android:background="@drawable/roundededitcorner">
  
     
     <Spinner
        android:id="@+id/abwpondanmeupdateSpinner1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
     
  
    
    </LinearLayout>
    
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">
  
     <TextView
        android:id="@+id/textView1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:text="Samples T.Weight(g)"
        android:textSize="15sp"
        android:textColor="@android:color/black"/>
      <EditText
        android:id="@+id/abwsamplesweight1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
 </LinearLayout>
 <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">
       <TextView
         
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="Change Samples"
        android:textSize="15sp"
        android:textColor="@android:color/black" />
       <ImageButton 
          android:id="@+id/addsamples1"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="10dp"
          android:contentDescription="true"
          android:background="@drawable/radd"/>
      </LinearLayout>
  <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
  <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
     android:layout_marginTop="5dp"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp">
 
        <TableLayout
            android:id="@+id/updatetblabws1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:textColor="@android:color/white">
        </TableLayout>
 </LinearLayout>       
</ScrollView>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
  
    
    <EditText
        android:id="@+id/updateeditTextabw1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:hint="ABW"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
       
    
    <EditText
        android:id="@+id/updateeditTextwg1"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:hint="WG"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
 </LinearLayout>
   
 
   <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal">
  
 <Button 
          android:layout_width="0dp"
          android:layout_height="36dp"
          android:layout_weight="1"
          android:text="Update"
          android:id="@+id/abwdialogupdate1"
          android:layout_gravity="center"
          android:textColor="@android:color/white"
          android:background="@drawable/rounded_button"/>
 </LinearLayout>
 </LinearLayout>
</ScrollView>
