<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
     <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal">
     

     <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
<TextView
         android:id="@+id/harvestcalendar"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/harvestimgcalendar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/calendar"/>

</LinearLayout>
  <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    android:layout_margin="3dp"
    android:orientation="horizontal">
  <TextView
         android:id="@+id/harvesttime"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/harvestimgtime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/clock"/>

</LinearLayout>
 
</LinearLayout>
 <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   android:layout_margin="3dp"
    android:orientation="horizontal">
 <TextView
          
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="PondName"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

      <EditText
        android:id="@+id/harvestpondname"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
       
</LinearLayout>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
  <TextView
          
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="HarvestSize(g)"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>
    
    <EditText
        android:id="@+id/harvestsize"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
         />
       
    
     
 </LinearLayout>
   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:orientation="horizontal" >
    <TextView
          
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="left"
         android:textSize="15sp"
         android:text="ShrimpHarvest(Kg)"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>
    
    <EditText
        android:id="@+id/shrimpharvest"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:inputType="numberDecimal"
        android:layout_margin="5dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
         />
    </LinearLayout>
    <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="horizontal">
 <Button 
          android:layout_width="0dp"
          android:layout_height="36dp"
          android:layout_weight="1"
          android:text="Cancel"
          android:id="@+id/harvestCancelEdit"
          android:layout_margin="3dp"
          android:layout_gravity="center"
          android:textColor="@android:color/white"
          android:background="@drawable/blue_button"/>
 <Button 
          android:layout_width="0dp"
          android:layout_height="36dp"
          android:layout_weight="1"
          android:text="Save"
          android:id="@+id/harvestSaveEdit"
          android:layout_margin="3dp"
          android:layout_gravity="center"
          
          android:textColor="@android:color/white"
          android:background="@drawable/blue_button"/>
 </LinearLayout>
</LinearLayout>
