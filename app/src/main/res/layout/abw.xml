<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
      <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
   <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:background="@drawable/roundededitcorner">
 

     <Spinner
     android:id="@+id/abwactivityspinner"
     android:layout_width="0dp"
     android:layout_height="36dp"
     android:layout_weight="1"
     android:background="@drawable/roundededitcorner"/>
      

</LinearLayout>

   <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="5dp"
     android:layout_marginLeft="10dp"
     android:layout_marginRight="10dp"
    android:orientation="horizontal">
     

     <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
    
    android:orientation="horizontal">
<TextView
         android:id="@+id/abwcalendar"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/abwimgcalendar"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/calendar"/>

</LinearLayout>
  <LinearLayout  
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@drawable/roundededitcorner"
    android:layout_weight="1"
   android:layout_marginLeft="3dp"
   
    android:orientation="horizontal">
  <TextView
         android:id="@+id/abwtime"
         android:layout_width="0dp"
         android:layout_height="36dp"
         android:gravity="center"
         android:textSize="15sp"
        
         android:textColor="@android:color/black"
         android:layout_weight="1"/>

<ImageButton 
          android:id="@+id/abwimgtime"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginRight="15dp"
          android:contentDescription="true"
          android:background="@drawable/clock"/>

</LinearLayout>
 
</LinearLayout>

    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
   
    android:orientation="horizontal" >
   <LinearLayout  
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:layout_marginTop="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:orientation="horizontal"
    android:background="@drawable/roundededitcorner">
     
    <Spinner
         android:id="@+id/feedabwspinner1"
         android:layout_width="0dp"
         android:layout_weight="1"
         android:layout_height="36dp"
         android:background="@drawable/roundededitcorner"/>
      
</LinearLayout>
    
    </LinearLayout>
     <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Samples"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@android:color/black" />
 
  <ScrollView 
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="vertical">
  <LinearLayout 
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical"
      android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
<TableLayout
            android:id="@+id/abwdemo"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:textColor="@android:color/white">
        </TableLayout>
        <TableLayout
            android:id="@+id/tblabwss"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            
            android:shrinkColumns="*"
            android:stretchColumns="*"
            android:textColor="@android:color/white">
        </TableLayout>
 </LinearLayout>       
</ScrollView>
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:orientation="horizontal" >
  
    
    <EditText
        android:id="@+id/editTextabw"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:hint="ABW"
        android:layout_margin="2dp"
        android:textSize="15sp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
       
    
    <EditText
        android:id="@+id/editTextwg"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_weight="1"
        android:hint="WG"
        android:textSize="15sp"
        android:layout_margin="2dp"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:background="@drawable/roundededitcorner"
        android:editable="false"/>
 </LinearLayout>
   
 
  <Button android:layout_width="match_parent"
          android:layout_height="36dp"
          android:text="Save"
          android:id="@+id/abwsave"
          android:layout_margin="10dp"
          android:layout_gravity="center"
          android:textColor="@android:color/white"
          android:background="@drawable/rounded_button"/>
 </LinearLayout>
</ScrollView>
